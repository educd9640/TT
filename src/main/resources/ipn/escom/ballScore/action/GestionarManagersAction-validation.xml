<!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
    <validator type="requiredstring">
        <param name="fieldname">managerForm.nombrePila</param>
        <message>Nombre requerido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">managerForm.apellidoPat</param>
        <message>Apellido paterno requerido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">managerForm.apellidoMat</param>
        <message>Apellido materno requerido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">managerForm.correo</param>
        <message>Correo electronico requerido.</message>
    </validator>
    <validator type="email">
        <param name="fieldname">managerForm.correo</param>
        <message>Correo electronico no valido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">managerForm.contrasenia</param>
        <message>Contrase√±a requerida.</message>
    </validator>
	<validator type="regex">
        <param name="fieldname">managerForm.telefono</param>
        <param name="regex"><![CDATA[\d{2}-\d{4}-\d{4}]]></param>
        <message>El numero de telefono debe ser ingresado como 55-9999-9999.</message>
    </validator>
</validators>
