<!DOCTYPE validators PUBLIC
         "-//Apache Struts//XWork Validator 1.0.3//EN"
           "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
<validators>
	<validator type="required">
        <param name="fieldname">LigaForm.idLiga</param>
        <message>id requerido.</message>
    </validator>
    <validator type="long">
        <param name="fieldName">LigaForm.idLiga</param>
        <param name="max">99999999</param>
        <message>Boleta debe ser a 8 digitos</message>
     </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.nombre</param>
        <message>Nombre requerido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.telefono</param>
        <message>Telefono requerido.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.calle</param>
        <message>Calle requerida.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.codigoPostal</param>
        <message>Codigo postal no valido.</message>
    </validator>
    <validator type="long">
        <param name="fieldName">LigaForm.codigoPostal</param>
        <param name="max">99999</param>
        <message>El codigo postal debe ser a 5 digitos</message>
     </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.delegacion</param>
        <message>Delegacion requerida.</message>
    </validator>
    <validator type="requiredstring">
        <param name="fieldname">LigaForm.estado</param>
        <message>Estado requerido.</message>
    </validator>
    
    <validator type="regex">
        <param name="fieldname">LigaForm.idLiga</param>
        <param name="regex"><![CDATA[\d{8}]]></param>
        <message>El id debe ser a 8 digitos.</message>
    </validator>
</validators>