<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "ipn.escom.ballScore.entity.Temporada" table = "TEMPORADA">
      
      <meta attribute = "class-description">
         This class contains the temporada detail. 
      </meta>
      
      <id name = "idTemporada" type = "java.lang.Long" column = "ID_LIGA"></id>
      
      <property name = "idLiga" 			column = "ID_LIGA" 				type = "java.lang.Long" not-null="true"/>
      <property name = "idEquipoCampeon" 	column = "ID_EQUIPO_CAMPEON" 	type = "java.lang.Long" 				 />
      <property name = "fechaInicial"		column = "FECHA_INICIAL" 		type = "java.lang.String" 				 />
      <property name = "fechaFinal" 		column = "FECHA_FINAL"	 		type = "java.lang.String"	  			 />
      <property name = "fechaAlta" 			column = "FECHA_ALTA" 			type = "java.sql.Date"					 />
      
     
     <!-- <many-to-one name="escuela" class="ipn.escom.ballScore.entity.Escuela" fetch="select">
      	<column name="ID_ESCUELA" not-null="true" />
      </many-to-one>
       --> 
      <many-to-one name="liga" class="ipn.escom.ballScore.entity.Liga" lazy="false" not-null="true" cascade="none" insert="false" update="false">
      <column name="ID_LIGA"></column>
      </many-to-one>

   </class>
</hibernate-mapping>